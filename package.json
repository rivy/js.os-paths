{
	"name": "os-paths",
	"version": "3.0.2",
	"description": "Generate portable basic OS paths (home, temp, ...)",
	"license": "MIT",
	"repository": "rivy/js.os-paths",
	"author": {
		"name": "Roy Ivy III",
		"email": "rivy.dev@gmail.com"
	},
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"coverage": "nyc report --reporter=text-lcov | codecov --disable=gcov --pipe",
		"lint": "npm-run-all lint:*",
		"lint:spell": "run-s -s _:min-node-8 _:spellcheck || run-s _:max-node-6 _:spellcheck-warn",
		"lint:style": "xo",
		"pretest": "npm run lint",
		"test": "nyc --silent ava && tsd",
		"_:min-node-8": "is-node-modern 8",
		"_:max-node-6": "is-node-not-modern 8",
		"_:spellcheck": "cspell *.js *.ts readme.md --no-summary",
		"_:spellcheck-warn": "echo-cli \"lint:spell WARN Spell-check skipped [for NodeJS < v8]\""
	},
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"common",
		"cross-platform",
		"directory",
		"env",
		"environment",
		"linux",
		"mac",
		"macos",
		"osx",
		"path",
		"paths",
		"portable",
		"unix",
		"windows"
	],
	"devDependencies": {
		"ava": "^1.4.1",
		"codecov": "^3.5.0",
		"cspell": "^4.0.30",
		"echo-cli": "^1.0.8",
		"eslint": "^5.16.0",
		"is-node-modern": "^1.0.0",
		"lodash": "^4.17.15",
		"npm-run-all": "^4.1.5",
		"nyc": "^14.1.1",
		"tsd": "^0.7.1",
		"util": "^0.12.1",
		"xo": "^0.24.0"
	}
}
